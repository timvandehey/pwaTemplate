// jsconfig.json
{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            //Assuming your components/utilities live in ./src
            //Update this path as necessary
            "comp/*": [
                "./src/*"
            ],
            "@Utilities/*": [
                "./src/Utilities/*"
            ]
        }
    },
    //Add any build/compiled folders here to stop vscode searching those
    "exclude": [
        "node_modules",
        "build"
    ]
}